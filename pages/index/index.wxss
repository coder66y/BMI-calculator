/* 马卡龙多色渐变风格 */

/* 背景马卡龙多色渐变 */
.container {
  padding: 40rpx 0;
  min-height: 100vh;
  background: linear-gradient(135deg, #A2D5F2 0%, #FFB6B9 60%, #FFE6A7 100%);
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  padding: 32rpx 0 0 0;
}
.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #FFB6B9;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}
.subtitle {
  font-size: 26rpx;
  color: #A2D5F2;
  font-weight: 400;
}

/* 卡片马卡龙风格 */
.card {
  background: rgba(255,255,255,0.92);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(162,213,242,0.10);
  margin: 0 32rpx 36rpx 32rpx;
  animation: fadeIn 0.5s;
  border: 2rpx solid #FFE6A7;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: none; }
}
.card-header {
  padding: 28rpx 32rpx 0 32rpx;
  border-bottom: none;
}
.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #B8E0D2;
}
.card-body {
  padding: 24rpx 32rpx 32rpx 32rpx;
}
.card-footer {
  padding: 18rpx 32rpx 24rpx 32rpx;
  background: none;
  border-top: none;
}

/* 输入框马卡龙风格 */
.input-group {
  margin-bottom: 32rpx;
}
.input-label {
  display: block;
  font-size: 28rpx;
  color: #A2D5F2;
  margin-bottom: 10rpx;
  font-weight: 400;
}
.input-field {
  width: 100%;
  padding: 0 0 18rpx 0;
  border: none;
  border-bottom: 2rpx solid #FFB6B9;
  border-radius: 0 0 8rpx 8rpx;
  font-size: 32rpx;
  background: transparent;
  color: #222;
  line-height: 48rpx;
  transition: border-color 0.3s;
}
.input-field:focus {
  border-bottom: 2rpx solid #A2D5F2;
  outline: none;
}
.input-field.error {
  border-bottom: 2rpx solid #FFB6B9;
}
.input-field::placeholder {
  color: #FFE6A7;
  font-size: 28rpx;
  font-weight: 300;
  line-height: 48rpx;
}
.error-message {
  color: #FFB6B9;
  font-size: 22rpx;
  margin-top: 6rpx;
  padding-left: 2rpx;
}

/* 按钮马卡龙渐变风格 */
.btn {
  display: block;
  width: 100%;
  padding: 26rpx 0;
  border-radius: 20rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s cubic-bezier(.4,0,.2,1);
  margin-bottom: 0;
  box-shadow: 0 2rpx 8rpx rgba(255,182,185,0.10);
  outline: none;
  background: none;
}
.btn-primary {
  background: linear-gradient(90deg, #A2D5F2 0%, #FFB6B9 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255,182,185,0.10);
}
.btn-primary:active {
  transform: scale(0.97);
  background: linear-gradient(90deg, #FFB6B9 0%, #A2D5F2 100%);
}
.btn-primary.disabled {
  background: #FFE6A7;
  color: #bdbdbd;
  box-shadow: none;
}
.btn-secondary {
  background: #B8E0D2;
  color: #fff;
  border: 2rpx solid #A2D5F2;
  box-shadow: 0 2rpx 8rpx rgba(162,213,242,0.10);
}
.btn-secondary:active {
  background: #A2D5F2;
  transform: scale(0.98);
}

/* BMI结果显示 */
.bmi-display {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 18rpx 0;
  background: linear-gradient(90deg, #FFE6A7 0%, #B8E0D2 100%);
  border-radius: 12rpx;
}
.bmi-value {
  font-size: 60rpx;
  font-weight: 600;
  color: #FFB6B9;
  margin-bottom: 6rpx;
}
.bmi-unit {
  font-size: 24rpx;
  color: #A2D5F2;
  font-weight: 400;
}

/* BMI分类显示 */
.category-display {
  text-align: center;
  margin-bottom: 18rpx;
  padding: 12rpx 0;
  background: #FFE6A7;
  border-radius: 8rpx;
}
.category-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
  color: #B8E0D2;
}
.category-range {
  font-size: 20rpx;
  color: #A2D5F2;
  opacity: 0.8;
}

/* 健康建议 */
.advice-section {
  margin-bottom: 18rpx;
  padding: 16rpx 0 16rpx 12rpx;
  background: #B8E0D2;
  border-radius: 8rpx;
  border-left: 4rpx solid #A2D5F2;
}

/* 理想体重范围 */
.ideal-weight-section {
  margin-bottom: 12rpx;
  padding: 10rpx 0 10rpx 12rpx;
  background: #FFE6A7;
  border-radius: 8rpx;
}
.ideal-weight-title {
  font-size: 24rpx;
  color: #A2D5F2;
  font-weight: 500;
}
.ideal-weight-range {
  font-size: 22rpx;
  color: #222;
}

/* 历史记录 */
.history-list {
  margin-top: 8rpx;
}
.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #FFE6A7;
}
.history-main {
  display: flex;
  align-items: center;
}
.history-bmi {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFB6B9;
  margin-right: 12rpx;
}
.history-category {
  font-size: 24rpx;
  color: #A2D5F2;
}
.history-details {
  text-align: right;
}
.history-data {
  font-size: 20rpx;
  color: #A2D5F2;
}
.history-time {
  font-size: 18rpx;
  color: #FFE6A7;
}

/* 底部操作按钮 */
.bottom-actions {
  margin: 32rpx 32rpx 0 32rpx;
  display: flex;
  gap: 24rpx;
}

/* 统一字体 */
page, .container, .card, .btn, .input-label, .input-field, .bmi-value, .category-name, .advice-section, .ideal-weight-title {
  font-family: "PingFang SC", "Helvetica Neue", Arial, "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
} 